<h1><%if flash[:message]%>
<%=flash[:message]%>
<%end%></h1>

<%= form_for @pizza do |f|%>
<%=f.label :name%>
<%=f.text_field :name%>
<%=f.label :ingredients%>
<%=f.text_field :ingredients%>
<%=f.collection_select :restaurant_id, Restaurant.all, :id, :name, prompt: true%>
<%=f.submit "Create New Pizza"%>
<%end%>